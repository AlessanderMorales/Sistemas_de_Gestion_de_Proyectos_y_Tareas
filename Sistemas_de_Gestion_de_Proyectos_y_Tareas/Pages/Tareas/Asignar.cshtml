@page "{id:int}"
@model Sistema_de_Gestion_de_Proyectos_y_Tareas.Pages.Tareas.AsignarModel
@{
    ViewData["Title"] = "Asignar Tarea a Usuarios";
}

<style>
    :root {
        --volcanic-bg: #1e1e2d;
        --volcanic-card: #2d2d3b;
        --volcanic-text: #e0e0e0;
        --accent-lava: linear-gradient(135deg, #FF512F 0%, #DD2476 100%);
        --accent-orange: #FF5722;
        --accent-gold: #FFC107;
        --border-color: #3f3f4b;
    }

    body {
        background-color: var(--volcanic-bg);
        color: var(--volcanic-text);
    }

    .title-volcanic {
        background: linear-gradient(to right, #FF512F, #F09819);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
        border-bottom: 2px solid rgba(255, 87, 34, 0.3);
        padding-bottom: 0.5rem;
        margin-bottom: 2rem;
        text-shadow: 0px 0px 20px rgba(255, 81, 47, 0.2);
    }

    .form-container {
        max-width: 700px;
        background-color: var(--volcanic-card);
        padding: 2.5rem;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.4);
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    .form-label {
        color: #cfcfcf;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .current-assignments {
        background-color: #1a1a20;
        padding: 1.2rem;
        border-radius: 10px;
        margin-bottom: 1.5rem;
        border-left: 4px solid var(--accent-orange);
    }

        .current-assignments h6 {
            color: var(--accent-orange);
            margin-bottom: 0.75rem;
            font-weight: bold;
        }

    .user-badge {
        background: rgba(255, 87, 34, 0.15);
        color: var(--accent-orange);
        border: 1px solid rgba(255, 87, 34, 0.3);
        padding: 0.4rem 1rem;
        border-radius: 50px;
        display: inline-block;
        margin: 0.25rem;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .search-input {
        background-color: #1a1a20;
        color: #fff;
        border: 1px solid var(--border-color);
        padding: 10px 15px;
        border-radius: 8px;
        width: 100%;
        margin-bottom: 10px;
        transition: 0.3s;
    }

        .search-input:focus {
            background-color: #222;
            border-color: var(--accent-orange);
            outline: none;
            box-shadow: 0 0 10px rgba(255, 87, 34, 0.2);
        }

    .users-list {
        background-color: #1a1a20;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 0.5rem;
        max-height: 400px;
        overflow-y: auto;
    }

    .option-item {
        background-color: var(--volcanic-card);
        padding: 12px 15px;
        margin-bottom: 5px;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        border: 1px solid transparent;
        color: #b0b0b0;
    }

        .option-item:hover {
            background-color: #363645;
            color: white;
            border-color: var(--accent-orange);
        }

        .option-item.selected {
            background: linear-gradient(90deg, rgba(255,87,34,0.1) 0%, rgba(255,87,34,0) 100%);
            border-left: 4px solid var(--accent-orange);
            color: white;
        }

    .hidden {
        display: none;
    }

    .selected-count {
        background: var(--accent-lava);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: bold;
        display: inline-block;
        margin-top: 1rem;
        font-size: 0.85rem;
        box-shadow: 0 4px 10px rgba(221, 36, 118, 0.3);
    }

    .help-text {
        color: #888;
        font-size: 0.85rem;
        margin-top: 0.8rem;
    }

    .btn-volcanic-primary {
        background: var(--accent-lava);
        border: none;
        color: white;
        font-weight: bold;
        padding: 12px 30px;
        border-radius: 50px;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.9rem;
    }

        .btn-volcanic-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(221, 36, 118, 0.4);
            color: white;
        }

    .btn-volcanic-secondary {
        background-color: transparent;
        border: 2px solid #555;
        color: #aaa;
        font-weight: bold;
        padding: 10px 25px;
        border-radius: 50px;
        transition: all 0.3s ease;
    }

        .btn-volcanic-secondary:hover {
            border-color: #fff;
            color: #fff;
            background-color: rgba(255,255,255,0.05);
        }

    .users-list::-webkit-scrollbar {
        width: 6px;
    }

    .users-list::-webkit-scrollbar-track {
        background: #1a1a20;
    }

    .users-list::-webkit-scrollbar-thumb {
        background: #444;
        border-radius: 10px;
    }

        .users-list::-webkit-scrollbar-thumb:hover {
            background: var(--accent-orange);
        }
</style>

<h1 class="title-volcanic">@ViewData["Title"]</h1>

<div class="form-container">
    <h5 class="text-white mb-4" style="border-left: 3px solid var(--accent-gold); padding-left: 10px;">
        Tarea: <span style="font-weight:300">@Model.NombreTarea</span>
    </h5>

    @if (Model.UsuariosActualmenteAsignados != null && Model.UsuariosActualmenteAsignados.Any())
    {
    <div class="current-assignments">
        <h6><i class="bi bi-people-fill"></i> Usuarios Asignados Actualmente</h6>
        <div class="d-flex flex-wrap gap-2">
            @foreach (var usuario in Model.UsuariosActualmenteAsignados)
                {
            <span class="user-badge">
                @usuario.Nombres @usuario.PrimerApellido
            </span>
                }
        </div>
    </div>
    }

    <form method="post" id="asignarTareaForm">
        <input type="hidden" asp-for="TareaId" />

        <div class="mb-4">
            <label class="form-label">Asignar Nuevo Usuario</label>

            <input type="text"
                   id="usuarioSearch"
                   class="search-input"
                   placeholder="🔍 Buscar usuario por nombre..."
                   autocomplete="off">

            <div id="usuariosList" class="users-list">
                @foreach (var u in Model.UsuariosDisponibles)
                {
                <div class="option-item usuario-option"
                     data-id="@u.Id"
                     data-nombre="@($"{u.Nombres} {u.PrimerApellido}".ToLower())"
                     onclick="selectUsuario(@u.Id, '@u.Nombres @u.PrimerApellido')">
                    <i class="bi bi-person me-2"></i> @u.Nombres @u.PrimerApellido
                </div>
                }
            </div>

            <input type="hidden" asp-for="UsuarioId" id="usuarioIdInput" />

            <div class="d-flex justify-content-between align-items-center mt-2">
                <small class="text-muted">
                    Seleccionado: <span id="selectedUsuarioName" style="color: var(--accent-gold); font-weight:bold;">Ninguno</span>
                </small>
                <div class="help-text">
                    <i class="bi bi-info-circle"></i> Haz clic para seleccionar/deseleccionar
                </div>
            </div>
        </div>

        <div class="mt-5 d-flex gap-2">
            <button type="submit" class="btn btn-volcanic-primary" id="submitBtn">
                <i class="bi bi-save me-1"></i> Guardar
            </button>
            <a asp-page="/Tareas/Index" class="btn btn-volcanic-secondary">
                Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        const usuarioSearch = document.getElementById('usuarioSearch');
        const usuariosList = document.getElementById('usuariosList');
        const usuarioIdInput = document.getElementById('usuarioIdInput');
        const selectedUsuarioName = document.getElementById('selectedUsuarioName');

        usuarioSearch.addEventListener('input', function () {
            const search = this.value.toLowerCase().trim();
            const options = document.querySelectorAll('.usuario-option');
            let visible = 0;

            options.forEach(o => {
                const name = o.getAttribute('data-nombre');
                if (name.includes(search) || search === '') {
                    o.classList.remove('hidden');
                    visible++;
                } else {
                    o.classList.add('hidden');
                }
            });

            if (visible === 0) usuariosList.style.display = 'none';
            else usuariosList.style.display = 'block';
        });

        function selectUsuario(id, nombre) {
            if (usuarioIdInput.value == id) {
                usuarioIdInput.value = "";
                selectedUsuarioName.textContent = "Ninguno";
                usuarioSearch.value = "";
                document.querySelectorAll('.usuario-option').forEach(o => o.classList.remove('selected'));
            } else {
                usuarioIdInput.value = id;
                selectedUsuarioName.textContent = nombre;
                usuarioSearch.value = nombre;

                document.querySelectorAll('.usuario-option').forEach(o =>
                    o.classList.remove('selected')
                );

                const selected = document.querySelector(`.usuario-option[data-id="${id}"]`);
                if (selected) selected.classList.add('selected');
            }
        }

        window.selectUsuario = selectUsuario;
    </script>
}