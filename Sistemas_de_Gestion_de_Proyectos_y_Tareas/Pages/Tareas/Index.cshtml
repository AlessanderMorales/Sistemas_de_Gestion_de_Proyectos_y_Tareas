@page
@model Sistema_de_Gestion_de_Proyectos_y_Tareas.Pages.Tareas.IndexModel
@{
    ViewData["Title"] = "Lista de Tareas";
}

<!-- Agregamos los iconos explícitamente por si faltan en tu Layout -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --volcanic-bg: #1e1e2d;
        --volcanic-card: #2d2d3b;
        --accent-orange: #FF5722;
        --accent-red: #D32F2F;
        --accent-gold: #FFC107;
        --text-primary: #f5f5f7;
        --text-secondary: #a0a0a0;
    }

    body {
        background-color: var(--volcanic-bg);
        color: var(--text-primary);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Título con gradiente */
    .title-volcanic {
        background: linear-gradient(to right, #FF512F, #F09819);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
        margin: 0;
        font-size: 2rem;
    }

    /* Header y Buscador */
    .header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255,255,255,0.05);
    }

    .search-container {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .search-input {
        background-color: #15151a;
        color: #fff;
        border: 1px solid #444;
        border-radius: 50px;
        padding: 0.8rem 1.5rem 0.8rem 2.5rem;
        width: 100%;
        max-width: 400px;
        transition: 0.3s;
    }

        .search-input:focus {
            border-color: var(--accent-orange);
            box-shadow: 0 0 15px rgba(255, 87, 34, 0.2);
            outline: none;
        }

    .search-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #888;
    }

    /* --- TABLA --- */
    .card-table {
        background-color: var(--volcanic-card);
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        overflow: hidden;
    }

    .table-volcanic {
        width: 100%;
        border-collapse: collapse;
        color: var(--text-primary);
    }

        .table-volcanic thead th {
            text-align: left;
            color: var(--accent-orange);
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 1rem;
            border-bottom: 2px solid rgba(255, 87, 34, 0.3);
            font-weight: 700;
        }

        .table-volcanic tbody td {
            padding: 1.2rem 1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            vertical-align: middle;
            font-size: 0.95rem;
        }

        .table-volcanic tbody tr:hover {
            background-color: rgba(255, 255, 255, 0.03);
        }

        .table-volcanic tbody tr:last-child td {
            border-bottom: none;
        }

    /* Badges de Prioridad */
    .badge-priority {
        padding: 5px 12px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.75rem;
        text-transform: uppercase;
        display: inline-block;
        min-width: 70px;
        text-align: center;
    }

    .prioridad-alta {
        background: rgba(255, 82, 82, 0.15);
        color: #ff5252;
        border: 1px solid rgba(255, 82, 82, 0.3);
    }

    .prioridad-media {
        background: rgba(255, 193, 7, 0.15);
        color: #ffc107;
        border: 1px solid rgba(255, 193, 7, 0.3);
    }

    .prioridad-baja {
        background: rgba(102, 187, 106, 0.15);
        color: #66bb6a;
        border: 1px solid rgba(102, 187, 106, 0.3);
    }

    /* Estado */
    .status-indicator {
        display: inline-block;
        width: 8px;
        height: 8px;
        border-radius: 50%;
        margin-right: 6px;
    }

    .status-text {
        font-size: 0.9rem;
        font-weight: 500;
    }

    .st-sin-iniciar .status-indicator {
        background-color: #9e9e9e;
        box-shadow: 0 0 5px #9e9e9e;
    }

    .st-sin-iniciar .status-text {
        color: #ccc;
    }

    .st-progreso .status-indicator {
        background-color: #ffca28;
        box-shadow: 0 0 8px #ffca28;
    }

    .st-progreso .status-text {
        color: #ffca28;
    }

    .st-completada .status-indicator {
        background-color: #00e676;
        box-shadow: 0 0 8px #00e676;
    }

    .st-completada .status-text {
        color: #00e676;
    }

    .desc-text {
        color: var(--text-secondary);
        max-width: 250px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: block;
    }

    .project-link {
        color: #64b5f6;
        text-decoration: none;
        font-weight: 500;
        transition: 0.2s;
    }

        .project-link:hover {
            color: #90caf9;
            text-decoration: underline;
        }

    /* --- CORRECCIÓN: TEXTO "SIN ASIGNAR" --- */
    /* Lo hacemos más claro y legible */
    .text-unassigned {
        color: #b0b0b0; /* Gris claro brillante */
        font-style: italic;
        font-size: 0.9rem;
        opacity: 0.9;
    }

    /* --- CORRECCIÓN: BOTONES DE ACCIÓN --- */
    .actions-cell {
        display: flex;
        gap: 8px;
        justify-content: center;
    }

    .btn-icon {
        width: 38px; /* Un poco más grandes */
        height: 38px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: none;
        transition: all 0.2s ease;
        text-decoration: none;
        font-size: 1.1rem; /* Icono más grande */
    }

    /* Definimos colores específicos para que resalten */
    .btn-edit {
        background-color: rgba(255, 193, 7, 0.1);
        color: #ffc107;
        border: 1px solid rgba(255, 193, 7, 0.3);
    }

        .btn-edit:hover {
            background-color: #ffc107;
            color: #1e1e2d; /* Icono oscuro al hacer hover */
            transform: translateY(-2px);
        }

    .btn-status {
        background-color: rgba(0, 188, 212, 0.1);
        color: #00bcd4;
        border: 1px solid rgba(0, 188, 212, 0.3);
    }

        .btn-status:hover {
            background-color: #00bcd4;
            color: #1e1e2d;
            transform: translateY(-2px);
        }

    .btn-delete {
        background-color: rgba(244, 67, 54, 0.1);
        color: #f44336;
        border: 1px solid rgba(244, 67, 54, 0.3);
    }

        .btn-delete:hover {
            background-color: #f44336;
            color: white;
            transform: translateY(-2px);
        }

    .btn-volcanic-create {
        background: linear-gradient(135deg, #FF512F 0%, #DD2476 100%);
        border: none;
        color: white;
        padding: 10px 25px;
        border-radius: 50px;
        font-weight: bold;
        box-shadow: 0 4px 15px rgba(221, 36, 118, 0.4);
        transition: 0.3s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-volcanic-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(221, 36, 118, 0.6);
            color: white;
        }

    .hidden-row {
        display: none;
    }

    .no-results {
        text-align: center;
        padding: 3rem;
        color: #666;
        font-style: italic;
    }

    /* Modal Dark */
    .modal-content {
        background-color: #2d2d3b;
        color: #fff;
        border: 1px solid #444;
    }

    .modal-header {
        border-bottom: 1px solid #444;
    }

    .modal-footer {
        border-top: 1px solid #444;
    }

    .btn-close {
        filter: invert(1);
    }
</style>

<div class="header-actions">
    <h1 class="title-volcanic">@ViewData["Title"]</h1>
    @if (User.IsInRole("JefeDeProyecto") || User.IsInRole("SuperAdmin"))
    {
    <a asp-page="Create" class="btn btn-volcanic-create">
        <i class="bi bi-plus-lg"></i> Nueva Tarea
    </a>
    }
</div>

<div class="search-container">
    <i class="bi bi-search search-icon"></i>
    <input type="text" id="searchInput" class="search-input" placeholder="Buscar por título, descripción, prioridad..." autocomplete="off">
</div>

<div class="card-table">
    <div class="table-responsive">
        <table class="table-volcanic">
            <thead>
                <tr>
                    <th style="width: 25%;">Título</th>
                    <th style="width: 20%;">Descripción</th>
                    <th class="text-center">Prioridad</th>
                    <th class="text-center">Estado</th>
                    <th>Proyecto</th>
                    @if (User.IsInRole("JefeDeProyecto") || User.IsInRole("SuperAdmin"))
                    {
                    <th>Asignado a</th>
                    }
                    <th class="text-center" style="width: 150px;">Acciones</th>
                </tr>
            </thead>
            <tbody id="tareasTableBody">
                @foreach (var item in Model.Tareas)
                {
                <tr class="tarea-row"
                    data-titulo="@item.Titulo.ToLower()"
                    data-descripcion="@(item.Descripcion?.ToLower() ?? "")"
                    data-prioridad="@item.Prioridad.ToLower()"
                    data-status="@item.Status.ToLower()"
                    data-proyecto="@(item.ProyectoNombre?.ToLower() ?? "")"
                    data-usuario="@(item.UsuarioAsignadoNombre?.ToLower() ?? "")">

                    <!-- Título -->
                    <td style="font-weight: 600; color: #fff;">
                        @item.Titulo
                    </td>

                    <!-- Descripción -->
                    <td>
                        <span class="desc-text" title="@item.Descripcion">
                            @item.Descripcion
                        </span>
                    </td>

                    <!-- Prioridad -->
                    <td class="text-center">
                        <span class="badge-priority prioridad-@(item.Prioridad.ToLower())">
                            @item.Prioridad
                        </span>
                    </td>

                    <!-- Estado -->
                    <td class="text-center">
                        @if (item.Status == "SinIniciar")
                            {
                        <div class="st-sin-iniciar">
                            <span class="status-indicator"></span><span class="status-text">Sin Iniciar</span>
                        </div>
                            }
                            else if (item.Status == "EnProgreso")
                            {
                        <div class="st-progreso">
                            <span class="status-indicator"></span><span class="status-text">En Progreso</span>
                        </div>
                            }
                            else if (item.Status == "Completada")
                            {
                        <div class="st-completada">
                            <span class="status-indicator"></span><span class="status-text">Completada</span>
                        </div>
                            }
                    </td>

                    <!-- Proyecto -->
                    <td>
                        @if (!string.IsNullOrEmpty(item.ProyectoNombre))
                            {
                        <a class="project-link" asp-page="/Proyectos/Mostrar" asp-route-id="@item.IdProyecto">
                            <i class="bi bi-folder2-open me-1"></i> @item.ProyectoNombre
                        </a>
                            }
                            else
                            {
                        <span class="text-unassigned">-- Sin proyecto --</span>
                            }
                    </td>

                    <!-- Usuario Asignado (CORREGIDO) -->
                    @if (User.IsInRole("JefeDeProyecto") || User.IsInRole("SuperAdmin"))
                        {
                    <td>
                        @if (!string.IsNullOrEmpty(item.UsuarioAsignadoNombre))
                                {
                        <div class="d-flex align-items-center">
                            <div style="width: 24px; height: 24px; background: #444; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 8px; font-size: 0.7rem; color: #fff;">
                                @item.UsuarioAsignadoNombre.Substring(0,1).ToUpper()
                            </div>
                            <span>@item.UsuarioAsignadoNombre</span>
                        </div>
                                }
                                else
                                {
 <!-- Aquí aplicamos la nueva clase visible -->
                        <span class="text-unassigned">Sin asignar</span>
                                }
                    </td>
                        }

                    <!-- Acciones (CORREGIDO: Iconos visibles) -->
                    <td class="text-center">
                        <div class="actions-cell">
                            @if (User.IsInRole("JefeDeProyecto") || User.IsInRole("SuperAdmin"))
                                {
                            <a class="btn-icon btn-edit" asp-page="Edit" asp-route-id="@item.Id" title="Editar Tarea">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a class="btn-icon btn-status" asp-page="CambiarEstado" asp-route-id="@item.Id" title="Cambiar Estado">
                                <i class="bi bi-arrow-repeat"></i>
                            </a>
                            <button type="button" class="btn-icon btn-delete"
                                    data-bs-toggle="modal"
                                    data-bs-target="#confirmDeleteModal"
                                    data-item-id="@item.Id"
                                    title="Eliminar Tarea">
                                <i class="bi bi-trash-fill"></i>
                            </button>
                                }
                                else if (User.IsInRole("Empleado"))
                                {
                            <a class="btn-icon btn-status" asp-page="CambiarEstado" asp-route-id="@item.Id" title="Actualizar Estado">
                                <i class="bi bi-arrow-repeat"></i>
                            </a>
                                }
                        </div>
                        <form method="post" style="display:none" id="deleteForm-@item.Id" asp-page-handler="Delete" asp-route-id="@item.Id"></form>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div id="noResults" class="no-results hidden-row">
    <i class="bi bi-search" style="font-size: 2rem; display: block; margin-bottom: 1rem; color: #444;"></i>
    No encontramos tareas que coincidan con tu búsqueda.
</div>

<!-- Modal de Confirmación de Eliminación -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel" style="color: #ff5252;">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Estás seguro de que deseas eliminar esta tarea? Esta acción no se puede deshacer.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton">Eliminar Tarea</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchInput = document.getElementById('searchInput');
            const tareaRows = document.querySelectorAll('.tarea-row');
            const noResults = document.getElementById('noResults');

            var confirmDeleteModal = document.getElementById('confirmDeleteModal');
            var confirmDeleteButton = document.getElementById('confirmDeleteButton');
            var itemIdToDelete;

            if (confirmDeleteModal) {
                confirmDeleteModal.addEventListener('show.bs.modal', function (event) {
                    var button = event.relatedTarget;
                    itemIdToDelete = button.getAttribute('data-item-id');
                });

                confirmDeleteButton.addEventListener('click', function () {
                    var form = document.getElementById('deleteForm-' + itemIdToDelete);
                    if (form) {
                        form.submit();
                    }
                });
            }

            searchInput.addEventListener('input', function () {
                const searchTerm = this.value.toLowerCase().trim();
                let visibleCount = 0;

                tareaRows.forEach(function (row) {
                    const searchableText = [
                        row.getAttribute('data-titulo'),
                        row.getAttribute('data-descripcion'),
                        row.getAttribute('data-prioridad'),
                        row.getAttribute('data-status'),
                        row.getAttribute('data-proyecto'),
                        row.getAttribute('data-usuario')
                    ].join(' ');

                    if (searchableText.includes(searchTerm) || searchTerm === '') {
                        row.classList.remove('hidden-row');
                        visibleCount++;
                    } else {
                        row.classList.add('hidden-row');
                    }
                });

                if (visibleCount === 0 && searchTerm !== '') {
                    noResults.classList.remove('hidden-row');
                } else {
                    noResults.classList.add('hidden-row');
                }
            });
        });
    </script>
}