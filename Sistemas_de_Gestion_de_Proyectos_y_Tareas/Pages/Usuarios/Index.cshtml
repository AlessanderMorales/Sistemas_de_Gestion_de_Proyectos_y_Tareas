@page
@model Sistema_de_Gestion_de_Proyectos_y_Tareas.Pages.Usuarios.IndexModel
@{
    ViewData["Title"] = "Lista de Usuarios";
}

<style>
  :root {
 --accent-red: #D32F2F;
   --accent-orange: #FF5722;
        --accent-gold: #FFD700;
   --accent-edit: #ffc107;
    }

    .title-volcanic {
  background: linear-gradient(45deg, var(--accent-gold), var(--accent-orange));
        -webkit-background-clip: text;
     -webkit-text-fill-color: transparent;
        font-weight: 700;
    }

    .header-actions {
        display: flex;
justify-content: space-between;
        align-items: center;
  margin-bottom: 2rem;
     border-bottom: 2px solid rgba(255,255,255,0.1);
        padding-bottom: 1rem;
    }

    .table-volcanic {
        background-color: transparent;
        color: #e0e0e0;
        border-collapse: separate;
        border-spacing: 0 10px;
    }

    .table-volcanic > :not(caption) > * > * {
 background-color: #3a3a40;
        padding: 1.25rem;
     border-width: 0;
        vertical-align: middle;
    }

    .table-volcanic thead th {
        background-color: transparent;
        color: var(--accent-gold);
 font-size: 0.9rem;
        text-transform: uppercase;
      letter-spacing: 1px;
        border-bottom: 2px solid var(--accent-orange);
    }

    .table-volcanic tbody tr:hover {
   background-color: #4a4a50;
    }

    .btn-action {
        border-radius: 6px;
     font-weight: 500;
     padding: 5px 12px;
        transition: all 0.2s ease;
    }

    .btn-action:hover {
   transform: translateY(-1px);
    }

    .btn-edit {
        background-color: var(--accent-edit);
        border-color: var(--accent-edit);
        color: #212529;
    }

    .btn-delete {
     background-color: var(--accent-red);
        border-color: var(--accent-red);
        color: white;
    }

    .btn-volcanic-primary {
        background: linear-gradient(45deg, var(--accent-red), var(--accent-orange));
        border: none;
    color: white;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-volcanic-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(255, 87, 34, 0.4);
    }

  .modal-content.volcanic-modal {
  background-color: #2c2c31;
        color: #f5f5f7;
        border: 1px solid rgba(255,255,255,0.2);
        border-radius: 15px;
    }

    .volcanic-modal .modal-header {
        border-bottom: 1px solid var(--accent-orange);
    }

    .volcanic-modal .modal-footer {
border-top: 1px solid rgba(255,255,255,0.1);
  }

    .btn-volcanic-delete {
    background-color: var(--accent-red);
        border: none;
      color: white;
        font-weight: bold;
   padding: 10px 20px;
    border-radius: 8px;
    }

    .btn-volcanic-secondary-modal {
      background-color: #4a4a50;
        border: none;
  color: white;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 8px;
    }
</style>

<div class="header-actions">
    <h1 class="title-volcanic m-0">@ViewData["Title"]</h1>
    <a asp-page="Create" class="btn btn-volcanic-primary">Crear Nuevo Usuario</a>
</div>

<table class="table table-volcanic">
    <thead>
        <tr>
 <th>Nombres</th>
            <th>Apellidos</th>
   <th>Email</th>
            <th>Usuario</th>
    <th>Rol</th>
   <th class="text-center">Acciones</th>
        </tr>
  </thead>
    <tbody>
        @foreach (var item in Model.Usuarios)
        {
        <tr>
        <td>@item.Nombres</td>
   <td>@(item.PrimerApellido + (!string.IsNullOrEmpty(item.SegundoApellido) ? " " + item.SegundoApellido : ""))</td>
      <td>@item.Email</td>
     <td>@item.NombreUsuario</td>
     <td>@item.Rol</td>
   <td class="text-center">
     <a class="btn btn-sm btn-action btn-edit" asp-page="Edit" asp-route-id="@item.Id">Editar</a>

 <form id="deleteForm-@item.Id" method="post" asp-page-handler="Delete" style="display:none;">
    <input type="hidden" name="DeleteId" value="@item.Id" />
     </form>

        <button type="button" 
    class="btn btn-sm btn-delete"
     data-bs-toggle="modal"
   data-bs-target="#confirmDeleteModal"
      data-item-id="@item.Id">
  Eliminar
      </button>
    </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal de eliminación movido a _Modals.cshtml -->

@section Scripts {
    <script>
        // Script de modal manejado por modals.js
    </script>
}
