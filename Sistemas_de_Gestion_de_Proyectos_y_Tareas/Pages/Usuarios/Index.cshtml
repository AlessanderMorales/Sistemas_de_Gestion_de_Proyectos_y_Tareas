@page
@model Sistema_de_Gestion_de_Proyectos_y_Tareas.Pages.Usuarios.IndexModel
@{
    ViewData["Title"] = "Directorio de Usuarios";
}

<!-- IMPORTANTE: Esto arregla los "cuadrados vacíos" cargando los iconos -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --volcanic-bg: #15151a;
        --volcanic-card: #1e1e2d;
        --accent-primary: #FF5722; /* Naranja Volcánico */
        --accent-secondary: #FFD700; /* Oro */
        --text-primary: #ffffff;
        --border-color: rgba(255,255,255,0.08);
    }

    body {
        background-color: var(--volcanic-bg) !important;
        color: var(--text-primary);
    }

    /* --- Encabezado --- */
    .header-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .title-volcanic {
        background: linear-gradient(to right, #FF512F, #F09819);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
        font-size: 2.2rem;
        margin: 0;
        text-shadow: 0 5px 15px rgba(255, 81, 47, 0.2);
    }

    /* --- Buscador --- */
    .search-wrapper {
        position: relative;
        min-width: 300px;
    }

    .search-input {
        background-color: #121215;
        border: 1px solid #333;
        color: white;
        padding: 12px 20px 12px 45px;
        border-radius: 50px;
        width: 100%;
        transition: all 0.3s ease;
    }

        .search-input:focus {
            outline: none;
            border-color: var(--accent-primary);
            box-shadow: 0 0 15px rgba(255, 87, 34, 0.3);
            background-color: #1a1a20;
        }

    .search-icon {
        position: absolute;
        left: 18px;
        top: 50%;
        transform: translateY(-50%);
        color: #666;
    }

    /* --- Botón Crear --- */
    .btn-create {
        background: linear-gradient(135deg, #FF512F 0%, #DD2476 100%);
        border: none;
        color: white;
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 1px;
        box-shadow: 0 4px 15px rgba(221, 36, 118, 0.4);
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

        .btn-create:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(221, 36, 118, 0.6);
            color: white;
        }

    /* --- Tarjeta de Tabla --- */
    .table-card {
        background-color: var(--volcanic-card);
        border-radius: 16px;
        border: 1px solid var(--border-color);
        box-shadow: 0 10px 40px rgba(0,0,0,0.4);
        overflow: hidden;
    }

    /* --- Estilos de Tabla --- */
    .table-volcanic {
        width: 100%;
        margin-bottom: 0;
        border-collapse: separate;
        border-spacing: 0;
    }

        .table-volcanic thead th {
            background-color: #1a1a20;
            color: var(--accent-primary);
            font-size: 0.75rem;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 1.2px;
            padding: 1.5rem;
            border-bottom: 2px solid #333;
        }

        .table-volcanic tbody td {
            background-color: var(--volcanic-card);
            color: #e0e0e0;
            padding: 1.2rem 1.5rem;
            border-bottom: 1px solid rgba(255,255,255,0.05);
            vertical-align: middle;
            font-size: 0.95rem;
        }

        .table-volcanic tbody tr:hover td {
            background-color: #252530;
            color: white;
        }

    /* --- Avatar --- */
    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #333, #444);
        color: var(--accent-secondary);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
        border: 2px solid transparent;
        transition: all 0.3s;
    }

    .table-volcanic tbody tr:hover .user-avatar {
        background: linear-gradient(135deg, #FF512F, #DD2476);
        color: white;
        transform: scale(1.1);
    }

    /* --- Badges de Roles --- */
    .role-badge {
        padding: 6px 14px;
        border-radius: 30px;
        font-size: 0.7rem;
        font-weight: 700;
        letter-spacing: 0.5px;
        text-transform: uppercase;
        display: inline-block;
    }

    .role-superadmin {
        background: rgba(255, 215, 0, 0.1);
        color: #FFD700;
        border: 1px solid rgba(255, 215, 0, 0.3);
    }

    .role-jefeproyecto {
        background: rgba(255, 87, 34, 0.1);
        color: #FF5722;
        border: 1px solid rgba(255, 87, 34, 0.3);
    }

    .role-empleado {
        background: rgba(33, 150, 243, 0.1);
        color: #2196F3;
        border: 1px solid rgba(33, 150, 243, 0.3);
    }

    /* --- Botones de Acción (Iconos Arreglados) --- */
    .action-btn {
        width: 38px;
        height: 38px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
        border: 1px solid rgba(255,255,255,0.1);
        cursor: pointer;
        margin: 0 4px;
        text-decoration: none;
    }

    .btn-edit {
        background: rgba(255, 193, 7, 0.05);
        color: #ffc107;
        border-color: rgba(255, 193, 7, 0.2);
    }

        .btn-edit:hover {
            background: #ffc107;
            color: #1a1a20;
            box-shadow: 0 0 15px rgba(255, 193, 7, 0.4);
            transform: translateY(-2px);
        }

    .btn-delete {
        background: rgba(239, 71, 58, 0.05);
        color: #ef473a;
        border-color: rgba(239, 71, 58, 0.2);
    }

        .btn-delete:hover {
            background: #ef473a;
            color: white;
            box-shadow: 0 0 15px rgba(239, 71, 58, 0.4);
            transform: translateY(-2px);
        }

    /* --- Modal Oscuro --- */
    .modal-content.volcanic-modal {
        background-color: #252530;
        color: #f5f5f7;
        border: 1px solid #444;
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
    }

    .modal-header {
        border-bottom: 1px solid #333;
    }

    .modal-footer {
        border-top: 1px solid #333;
    }

    .btn-close-white {
        filter: invert(1);
        opacity: 0.8;
    }
</style>

<div class="header-container">
    <h1 class="title-volcanic">Directorio de Usuarios</h1>

    <div class="d-flex gap-3 align-items-center flex-grow-1 justify-content-end">
        <div class="search-wrapper">
            <input type="text" id="userInput" onkeyup="filterTable()" class="search-input" placeholder="Buscar por nombre o usuario...">
            <i class="bi bi-search search-icon"></i>
        </div>
        <a asp-page="Create" class="btn-create">
            <i class="bi bi-person-plus-fill"></i> Nuevo Usuario
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mb-4 shadow-lg" role="alert" style="background: linear-gradient(135deg, #0f3443, #34e89e); color:white; border:none; border-radius: 12px;">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="table-card">
    <div class="table-responsive">
        <table class="table table-volcanic" id="usersTable">
            <thead>
                <tr>
                    <th style="padding-left: 2rem;">Usuario</th>
                    <th>Nombre Completo</th>
                    <th>Email</th>
                    <th class="text-center">Rol</th>
                    <th class="text-center" style="padding-right: 2rem;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Usuarios)
                {
                    <tr>
                        <td style="padding-left: 2rem;">
                            <div class="d-flex align-items-center gap-3">
                                <div class="user-avatar">
                                    <i class="bi bi-person-fill"></i>
                                </div>
                                <div>
                                    <span class="d-block fw-bold text-white">@item.NombreUsuario</span>
                                    <span class="small text-muted" style="font-size: 0.75rem;">ID: #@item.Id</span>
                                </div>
                            </div>
                        </td>
                        <td>
                            @{
                                var segundoApellido = !string.IsNullOrEmpty(item.SegundoApellido) ? " " + item.SegundoApellido : "";
                                var nombreCompleto = item.Nombres + " " + item.PrimerApellido + segundoApellido;
                            }
                            <span style="font-weight: 500;">@nombreCompleto</span>
                        </td>
                        <td class="text-secondary">
                            <i class="bi bi-envelope me-2" style="font-size: 0.8rem;"></i>@item.Email
                        </td>
                        <td class="text-center">
                            @{
                                var rolClass = item.Rol switch
                                {
                                    "SuperAdmin" => "role-superadmin",
                                    "JefeDeProyecto" => "role-jefeproyecto",
                                    _ => "role-empleado"
                                };
                                var rolIcon = item.Rol switch
                                {
                                    "SuperAdmin" => "bi-shield-fill-check",
                                    "JefeDeProyecto" => "bi-briefcase-fill",
                                    _ => "bi-person-badge"
                                };
                            }
                            <span class="role-badge @rolClass">
                                <i class="bi @rolIcon me-1"></i> @item.Rol
                            </span>
                        </td>
                        <td class="text-center" style="padding-right: 2rem;">
                            <div class="d-flex justify-content-center">
                                <a asp-page="Edit" asp-route-id="@item.Id" class="action-btn btn-edit" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <button type="button" class="action-btn btn-delete"
                                        data-bs-toggle="modal"
                                        data-bs-target="#confirmDeleteModal"
                                        data-item-id="@item.Id"
                                        title="Eliminar">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            </div>

                            <!-- Formulario oculto para eliminación -->
                            <form id="deleteForm-@item.Id" method="post" asp-page-handler="Delete" style="display:none;">
                                <input type="hidden" name="DeleteId" value="@item.Id" />
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Personalizado Estilo Dark -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content volcanic-modal">
            <div class="modal-header">
                <h5 class="modal-title text-danger">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> Eliminar Usuario
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <div style="font-size: 3rem; color: #ef473a; margin-bottom: 1rem;">
                    <i class="bi bi-person-x"></i>
                </div>
                <p class="mb-1 fs-5">¿Estás seguro de que deseas eliminar este usuario?</p>
                <p class="text-muted small">Esta acción eliminará sus accesos y no se puede deshacer.</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger px-4" id="confirmDeleteButton">
                    <i class="bi bi-trash-fill me-2"></i> Sí, Eliminar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function filterTable() {
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("userInput");
            filter = input.value.toUpperCase();
            table = document.getElementById("usersTable");
            tr = table.getElementsByTagName("tr");

            for (i = 0; i < tr.length; i++) {
                tdUser = tr[i].getElementsByTagName("td")[0]; // Columna Usuario
                tdName = tr[i].getElementsByTagName("td")[1]; // Columna Nombre

                if (tdUser || tdName) {
                    txtValueUser = tdUser.textContent || tdUser.innerText;
                    txtValueName = tdName.textContent || tdName.innerText;

                    if (txtValueUser.toUpperCase().indexOf(filter) > -1 || txtValueName.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            var confirmDeleteModal = document.getElementById('confirmDeleteModal');
            var confirmDeleteButton = document.getElementById('confirmDeleteButton');
            var itemIdToDelete;

            if (confirmDeleteModal) {
                confirmDeleteModal.addEventListener('show.bs.modal', function (event) {
                    var button = event.relatedTarget;
                    itemIdToDelete = button.getAttribute('data-item-id');
                });

                confirmDeleteButton.addEventListener('click', function () {
                    var form = document.getElementById('deleteForm-' + itemIdToDelete);
                    if (form) {
                        form.submit();
                    }
                });
            }
        });
    </script>
}