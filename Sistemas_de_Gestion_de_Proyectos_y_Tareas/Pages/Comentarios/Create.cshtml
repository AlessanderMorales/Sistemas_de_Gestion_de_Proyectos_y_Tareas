@page
@model Sistema_de_Gestion_de_Proyectos_y_Tareas.Pages.Comentarios.CreateModel
@{
    ViewData["Title"] = "Nuevo Comentario";
}

<style>
    :root {
        --volcanic-bg: #1e1e2d;
        --volcanic-card: #2d2d3b;
        --accent-orange: #FF5722;
        --accent-red: #D32F2F;
        --text-primary: #f5f5f7;
    }

    body {
        background-color: var(--volcanic-bg);
        color: var(--text-primary);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .title-volcanic {
        background: linear-gradient(to right, #FF512F, #F09819);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
        margin-bottom: 2rem;
    }

    .form-container {
        background-color: var(--volcanic-card);
        padding: 2.5rem;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        border: 1px solid rgba(255,255,255,0.05);
    }

    .form-label {
        color: #ccc;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .form-control, .search-input {
        background-color: #1a1a20;
        color: #fff;
        border: 1px solid #444;
        border-radius: 12px;
        padding: 0.8rem 1rem;
        transition: 0.3s;
    }

        .form-control:focus, .search-input:focus {
            background-color: #222;
            border-color: var(--accent-orange);
            box-shadow: 0 0 0 0.25rem rgba(255, 87, 34, 0.2);
            outline: none;
        }

    .options-list {
        background-color: #222;
        border: 1px solid #444;
        border-radius: 12px;
        margin-top: 5px;
        max-height: 250px;
        overflow-y: auto;
        box-shadow: 0 10px 20px rgba(0,0,0,0.5);
    }

    .option-item {
        padding: 12px 15px;
        cursor: pointer;
        border-bottom: 1px solid #333;
        transition: 0.2s;
    }

        .option-item:hover {
            background-color: #333;
            color: var(--accent-orange);
        }

        .option-item.selected {
            background-color: rgba(255, 87, 34, 0.1);
            border-left: 4px solid var(--accent-orange);
            color: white;
        }

    .no-results {
        padding: 15px;
        text-align: center;
        color: #777;
        font-style: italic;
    }

    .hidden {
        display: none;
    }

    .selected-info {
        color: #FFC107;
        font-weight: 700;
    }

    .text-danger {
        color: #ff5252 !important;
        font-size: 0.85rem;
        margin-top: 5px;
        display: block;
    }

    .btn-volcanic-primary {
        background: linear-gradient(135deg, #FF512F 0%, #DD2476 100%);
        border: none;
        color: white;
        font-weight: bold;
        padding: 12px 30px;
        border-radius: 50px;
        transition: 0.3s;
        width: 100%;
        margin-top: 1rem;
    }

        .btn-volcanic-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(221, 36, 118, 0.4);
            color: white;
        }

    .btn-volcanic-secondary {
        display: inline-block;
        text-align: center;
        width: 100%;
        margin-top: 10px;
        color: #888;
        text-decoration: none;
        transition: 0.3s;
    }

        .btn-volcanic-secondary:hover {
            color: #fff;
        }
</style>

<div class="container mt-4">
    <h1 class="title-volcanic">Crear Comentario</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 form-container">
            <form method="post">

                <div class="mb-4">
                    <label class="form-label"><i class="bi bi-list-check"></i> Seleccionar Tarea</label>
                    <input type="text" id="tareaSearch" class="search-input" placeholder="Escribe para buscar tarea..." autocomplete="off">

                    <div id="tareasList" class="options-list" style="display:none;">
                        @if (Model.Tareas != null && Model.Tareas.Any())
                        {
                        @foreach (var tarea in Model.Tareas)
                            {
                        <div class="option-item tarea-option"
                             data-id="@tarea.Id"
                             data-titulo="@tarea.Titulo.ToLower()"
                             onclick="selectTareaFromElement(this)">
                            <div style="font-weight:600;">@tarea.Titulo</div>
                            <div style="font-size:0.8rem; color:#888;">Proyecto: @tarea.ProyectoNombre</div>
                        </div>
                            }
                        }
                        else
                        {
                        <div class="no-results">No hay tareas disponibles</div>
                        }
                    </div>
                    <div id="noResultsTarea" class="no-results" style="display: none;">No se encontraron tareas</div>

                    <input type="hidden" asp-for="Comentario.IdTarea" id="tareaIdInput" />
                    <span asp-validation-for="Comentario.IdTarea" class="text-danger"></span>
                    <div class="mt-2 text-end text-muted small">
                        Seleccionada: <span id="selectedTareaName" class="selected-info">Ninguna</span>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label"><i class="bi bi-person-badge"></i> Dirigido a</label>
                    <input type="text" id="destinatarioSearch" class="search-input" placeholder="Buscar usuario..." autocomplete="off" disabled>

                    <div id="destinatariosList" class="options-list" style="display:none;"></div>
                    <div id="noResultsDestinatario" class="no-results" style="display: none;">No se encontraron usuarios</div>

                    <input type="hidden" asp-for="DirigidoAUsuarioId" id="destinatarioIdInput" />

                    <div class="mt-2">
                        <small class="text-muted d-block">
                            <i class="bi bi-info-circle"></i>
                            @if (User.IsInRole("Empleado")) { <text>Usuarios en la misma tarea.</text> }
                            else { <text>Empleados asignados.</text> }
                        </small>
                        <div class="text-end text-muted small mt-1">
                            Destinatario: <span id="selectedDestinatarioName" class="selected-info">Ninguno</span>
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Comentario.Contenido" class="form-label"><i class="bi bi-chat-left-text"></i> Mensaje</label>
                    <textarea asp-for="Comentario.Contenido" class="form-control" rows="5" placeholder="¿Qué tienes en mente?"></textarea>
                    <span asp-validation-for="Comentario.Contenido" class="text-danger"></span>
                </div>

                <div class="pt-2">
                    <button type="submit" class="btn btn-volcanic-primary">Publicar Comentario</button>
                    <a asp-page="Index" class="btn btn-volcanic-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
    var tareaUsuariosMap = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
        Model.TareaUsuariosMap.ToDictionary(
            kvp => kvp.Key.ToString(),
            kvp => kvp.Value.Select(u => new {
                Id = u.Id,
                Nombres = u.Nombres,
                PrimerApellido = u.PrimerApellido,
                Rol = u.Rol
            }).ToList()
        )
    ));

    const tareaSearch = document.getElementById('tareaSearch');
    const tareaOptions = document.querySelectorAll('.tarea-option');
    const noResultsTarea = document.getElementById('noResultsTarea');
    const tareaIdInput = document.getElementById('tareaIdInput');
    const selectedTareaName = document.getElementById('selectedTareaName');
    const tareasList = document.getElementById('tareasList');
    const destinatarioSearch = document.getElementById('destinatarioSearch'); 

    tareaSearch.addEventListener('focus', () => {
        if(tareaSearch.value === '') tareasList.style.display = 'block';
    });

    tareaSearch.addEventListener('input', function () {
        const searchTerm = this.value.toLowerCase().trim();
        let visibleCount = 0;
        tareasList.style.display = 'block';

        tareaOptions.forEach(option => {
            const titulo = option.getAttribute('data-titulo');
            if (titulo.includes(searchTerm) || searchTerm === '') {
                option.classList.remove('hidden');
                visibleCount++;
            } else {
                option.classList.add('hidden');
            }
        });

        if (visibleCount === 0) {
            tareasList.style.display = 'none';
            noResultsTarea.style.display = 'block';
        } else {
            noResultsTarea.style.display = 'none';
        }
    });

    function selectTareaFromElement(el) {
        const id = el.getAttribute('data-id');
        const titulo = el.querySelector('div:first-child').textContent.trim();

        tareaIdInput.value = id;
        selectedTareaName.textContent = titulo;
        tareaSearch.value = titulo;

        document.querySelectorAll('.tarea-option').forEach(opt => opt.classList.remove('selected'));
        el.classList.add('selected');

        tareasList.style.display = 'none';
        destinatarioSearch.disabled = false; 
        actualizarDestinatarios();
    }
    window.selectTareaFromElement = selectTareaFromElement;

    const destinatariosList = document.getElementById('destinatariosList');
    const noResultsDestinatario = document.getElementById('noResultsDestinatario');
    const destinatarioIdInput = document.getElementById('destinatarioIdInput');
    const selectedDestinatarioName = document.getElementById('selectedDestinatarioName');

    destinatarioSearch.addEventListener('focus', () => {
        if(destinatarioSearch.value === '') destinatariosList.style.display = 'block';
    });

    destinatarioSearch.addEventListener('input', function () {
        const searchTerm = this.value.toLowerCase().trim();
        const options = document.querySelectorAll('.destinatario-option');
        let visibleCount = 0;
        destinatariosList.style.display = 'block';

        options.forEach(option => {
            const nombre = option.getAttribute('data-nombre');
            if (nombre.includes(searchTerm) || searchTerm === '') {
                option.classList.remove('hidden');
                visibleCount++;
            } else {
                option.classList.add('hidden');
            }
        });

        if (visibleCount === 0) {
            destinatariosList.style.display = 'none';
            noResultsDestinatario.style.display = 'block';
        } else {
            noResultsDestinatario.style.display = 'none';
        }
    });

    function selectDestinatario(id, nombre) {
        destinatarioIdInput.value = id;
        selectedDestinatarioName.textContent = nombre;
        destinatarioSearch.value = nombre;

        document.querySelectorAll('.destinatario-option').forEach(opt => opt.classList.remove('selected'));
        const selected = document.querySelector(`.destinatario-option[data-id="${id}"]`);
        if (selected) selected.classList.add('selected');

        destinatariosList.style.display = 'none';
    }
    window.selectDestinatario = selectDestinatario;

    function actualizarDestinatarios() {
        var tareaId = tareaIdInput.value;
        destinatariosList.innerHTML = '';
        destinatarioSearch.value = '';
        selectedDestinatarioName.textContent = 'Ninguno';
        destinatarioIdInput.value = '';

        if (!tareaUsuariosMap[tareaId]) {
            destinatariosList.innerHTML = '<div class="no-results">No hay usuarios disponibles</div>';
            return;
        }

        var usuarios = tareaUsuariosMap[tareaId];
        usuarios.forEach(usuario => {
            var textoCompleto = `${usuario.Nombres} ${usuario.PrimerApellido}`;
            var rol = (usuario.Rol === 'JefeDeProyecto' ? 'Jefe' : 'Empleado');

            var div = document.createElement('div');
            div.className = 'option-item destinatario-option';
            div.setAttribute('data-id', usuario.Id);
            div.setAttribute('data-nombre', textoCompleto.toLowerCase());
            div.onclick = function() { selectDestinatario(usuario.Id, textoCompleto); };

            div.innerHTML = `<div style="font-weight:600;">${textoCompleto}</div><div style="font-size:0.8rem; color:#888;">${rol}</div>`;

            destinatariosList.appendChild(div);
        });
    }

    document.addEventListener('click', function(e) {
        if (!e.target.closest('#tareaSearch') && !e.target.closest('#tareasList')) {
            tareasList.style.display = 'none';
        }
        if (!e.target.closest('#destinatarioSearch') && !e.target.closest('#destinatariosList')) {
            destinatariosList.style.display = 'none';
        }
    });
    </script>
}