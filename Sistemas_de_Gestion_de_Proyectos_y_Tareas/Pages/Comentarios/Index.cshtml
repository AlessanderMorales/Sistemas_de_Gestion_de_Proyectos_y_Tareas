@page
@model Sistema_de_Gestion_de_Proyectos_y_Tareas.Pages.Comentarios.ComentariosIndexModel
@{
    ViewData["Title"] = "Muro de Comentarios";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --volcanic-bg: #1e1e2d;
        --volcanic-card: #2d2d3b;
        --accent-orange: #FF5722;
        --accent-red: #D32F2F;
        --accent-gold: #FFC107;
        --text-primary: #f5f5f7;
        --text-secondary: #a0a0a0;
    }

    body {
        background-color: var(--volcanic-bg);
        color: var(--text-primary);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255,255,255,0.05);
    }

    .title-volcanic {
        background: linear-gradient(to right, #FF512F, #F09819);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
        margin: 0;
        font-size: 2rem;
    }

    .search-container {
        margin-bottom: 2rem;
        position: relative;
    }

    .search-input {
        background-color: #15151a;
        color: #fff;
        border: 1px solid #444;
        border-radius: 50px;
        padding: 1rem 1.5rem 1rem 3rem;
        width: 100%;
        transition: 0.3s;
        font-size: 1rem;
    }

        .search-input:focus {
            border-color: var(--accent-orange);
            box-shadow: 0 0 15px rgba(255, 87, 34, 0.2);
            outline: none;
        }

    .search-icon {
        position: absolute;
        left: 20px;
        top: 50%;
        transform: translateY(-50%);
        color: #888;
    }

    .comments-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 1.5rem;
    }

    .comment-card {
        background-color: var(--volcanic-card);
        border-radius: 16px;
        padding: 1.5rem;
        position: relative;
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        border: 1px solid rgba(255,255,255,0.05);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .comment-card:hover {
            transform: translateY(-5px) scale(1.02);
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
            border-color: rgba(255, 87, 34, 0.3);
            z-index: 10;
        }

    .card-type-sent {
        border-top: 4px solid #2196F3;
    }
    .card-type-received {
        border-top: 4px solid #4CAF50;
    }
    .card-type-general {
        border-top: 4px solid var(--accent-orange);
    }

    .card-header-custom {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
        gap: 10px;
    }

    .avatar-circle {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        color: white;
        font-size: 1.1rem;
        background: linear-gradient(135deg, #444, #222);
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
    }

    .author-info h5 {
        margin: 0;
        font-size: 1rem;
        color: #fff;
        font-weight: 700;
    }

    .author-info span {
        font-size: 0.75rem;
        color: var(--text-secondary);
        display: block;
    }

    .comment-body {
        background-color: rgba(0,0,0,0.2);
        padding: 1rem;
        border-radius: 12px;
        color: #e0e0e0;
        font-size: 0.95rem;
        line-height: 1.5;
        margin-bottom: 1rem;
        position: relative;
    }

    .comment-context {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-bottom: 1rem;
    }

    .context-badge {
        font-size: 0.75rem;
        padding: 4px 10px;
        border-radius: 6px;
        background: rgba(255,255,255,0.05);
        color: #bbb;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

        .context-badge i {
            color: var(--accent-gold);
        }

    .card-footer-custom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-top: 1px solid rgba(255,255,255,0.05);
        padding-top: 10px;
    }

    .timestamp {
        font-size: 0.8rem;
        color: #666;
        font-style: italic;
    }

    .actions-area {
        display: flex;
        gap: 5px;
        opacity: 0.6;
        transition: 0.2s;
    }

    .comment-card:hover .actions-area {
        opacity: 1;
    }

    .btn-icon-sm {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        transition: 0.2s;
    }

    .btn-view {
        background: #17a2b8;
    }

    .btn-edit {
        background: #ffc107;
        color: #000;
    }

    .btn-delete {
        background: #dc3545;
    }

    .btn-icon-sm:hover {
        transform: scale(1.1);
        filter: brightness(1.2);
    }

    .btn-volcanic-primary {
        background: linear-gradient(135deg, #FF512F 0%, #DD2476 100%);
        border: none;
        color: white;
        padding: 12px 30px;
        border-radius: 50px;
        font-weight: bold;
        box-shadow: 0 4px 15px rgba(221, 36, 118, 0.4);
        transition: 0.3s;
        text-decoration: none;
    }

        .btn-volcanic-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(221, 36, 118, 0.6);
            color: white;
        }

    .modal-content {
        background-color: #2d2d3b;
        color: #fff;
        border: 1px solid #444;
    }

    .modal-header {
        border-bottom: 1px solid #444;
    }

    .modal-footer {
        border-top: 1px solid #444;
    }

    .btn-close {
        filter: invert(1);
    }

    .hidden-card {
        display: none !important;
    }

    .no-results {
        grid-column: 1 / -1;
        text-align: center;
        padding: 4rem;
        color: #666;
        font-style: italic;
    }
</style>

<div class="header-actions">
    <h2 class="title-volcanic">@ViewData["Title"]</h2>
    <a asp-page="Create" class="btn btn-volcanic-primary">
        <i class="bi bi-chat-dots-fill me-2"></i> Nuevo Comentario
    </a>
</div>

<div class="search-container">
    <i class="bi bi-search search-icon"></i>
    <input type="text"
           id="searchInput"
           class="search-input"
           placeholder="🔍 Buscar en el muro de comentarios..."
           autocomplete="off">
</div>

<div class="comments-grid" id="commentsContainer">
    @foreach (var c in Model.Comentarios)
    {
        // Lógica visual para tipo de tarjeta
        string cardClass = "card-type-general";
        string badgeText = "Comentario";
        string badgeColor = "#9E9E9E"; // Gris

        if (User.IsInRole("Empleado"))
        {
            if (c.IdUsuario == Model.UsuarioActualId)
            {
                cardClass = "card-type-sent";
                badgeText = "Enviado";
                badgeColor = "#2196F3"; // Azul
            }
            else if (c.IdDestinatario.HasValue && c.IdDestinatario.Value == Model.UsuarioActualId)
            {
                cardClass = "card-type-received";
                badgeText = "Recibido";
                badgeColor = "#4CAF50"; // Verde
            }
            else if (c.Tarea != null && c.Tarea.IdUsuarioAsignado.HasValue && c.Tarea.IdUsuarioAsignado.Value == Model.UsuarioActualId)
            {
                cardClass = "card-type-received";
                badgeText = "De Tarea";
                badgeColor = "#8BC34A"; // Verde claro
            }
        }

        // Generar iniciales
        string authorName = c.Usuario != null ? $"{c.Usuario.Nombres} {c.Usuario.PrimerApellido}" : "Desconocido";
        string initials = "??";
        if (c.Usuario != null && !string.IsNullOrEmpty(c.Usuario.Nombres))
        {
            initials = c.Usuario.Nombres.Substring(0, 1).ToUpper();
            if (!string.IsNullOrEmpty(c.Usuario.PrimerApellido))
            {
                initials += c.Usuario.PrimerApellido.Substring(0, 1).ToUpper();
            }
        }

    <div class="comment-card @cardClass search-item"
         data-contenido="@c.Contenido.ToLower()"
         data-proyecto="@(c.Tarea?.ProyectoNombre?.ToLower() ?? "")"
         data-tarea="@(c.Tarea?.Titulo?.ToLower() ?? "")"
         data-autor="@authorName.ToLower()">

        <div class="card-header-custom">
            <div class="avatar-circle" style="border: 2px solid @badgeColor;">
                @initials
            </div>
            <div class="author-info">
                <h5>@authorName</h5>
                <span style="color: @badgeColor;">@badgeText</span>
            </div>

            @if (User.IsInRole("JefeDeProyecto") || User.IsInRole("SuperAdmin"))
                {
            <div class="ms-auto">
                @if (c.Destinatario != null)
                        {
                <span class="badge bg-secondary" title="Dirigido a"><i class="bi bi-arrow-right"></i> @c.Destinatario.Nombres</span>
                        }
            </div>
                }
        </div>

        <div class="comment-body">
            @c.Contenido
        </div>

        <div class="comment-context">
            @if (c.Tarea != null)
                {
            <div class="context-badge" title="Tarea">
                <i class="bi bi-check2-square"></i> @(c.Tarea.Titulo.Length > 25 ? c.Tarea.Titulo.Substring(0,25)+"..." : c.Tarea.Titulo)
            </div>
            @if (!string.IsNullOrEmpty(c.Tarea.ProyectoNombre))
                    {
            <div class="context-badge" title="Proyecto">
                <i class="bi bi-folder"></i> @(c.Tarea.ProyectoNombre.Length > 20 ? c.Tarea.ProyectoNombre.Substring(0,20)+"..." : c.Tarea.ProyectoNombre)
            </div>
                    }
                }
        </div>

        <div class="card-footer-custom">
            <span class="timestamp"><i class="bi bi-clock"></i> @c.Fecha.ToString("dd/MM/yy HH:mm")</span>

            <div class="actions-area">
                <a asp-page="/Comentarios/Mostrar" asp-route-id="@c.IdComentario" class="btn-icon-sm btn-view" title="Ver Detalle">
                    <i class="bi bi-eye"></i>
                </a>

                @if (User.IsInRole("JefeDeProyecto") || User.IsInRole("SuperAdmin"))
                    {
                <a asp-page="/Comentarios/Edit" asp-route-id="@c.IdComentario" class="btn-icon-sm btn-edit" title="Editar">
                    <i class="bi bi-pencil"></i>
                </a>
                <button type="button" class="btn-icon-sm btn-delete"
                        data-bs-toggle="modal"
                        data-bs-target="#confirmDeleteModal"
                        data-item-id="@c.IdComentario"
                        title="Eliminar">
                    <i class="bi bi-trash"></i>
                </button>
                    }
            </div>
        </div>
    </div>
    }
</div>

<div id="noResults" class="no-results hidden-card">
    <i class="bi bi-chat-square-text" style="font-size: 3rem; display: block; margin-bottom: 10px;"></i>
    No se encontraron comentarios que coincidan.
</div>

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger">Confirmar Eliminación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas eliminar este comentario? Esta acción es irreversible.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteButton">Sí, Eliminar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var confirmDeleteModal = document.getElementById('confirmDeleteModal');
            var confirmDeleteButton = document.getElementById('confirmDeleteButton');
            var itemIdToDelete;

            confirmDeleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                itemIdToDelete = button.getAttribute('data-item-id');
            });

            confirmDeleteButton.addEventListener('click', function () {
                if (itemIdToDelete) {
                    var form = document.createElement('form');
                    form.method = 'post';
                    form.action = '?handler=Delete&id=' + itemIdToDelete;

                    var token = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (token) {
                        var hiddenToken = document.createElement('input');
                        hiddenToken.type = 'hidden';
                        hiddenToken.name = '__RequestVerificationToken';
                        hiddenToken.value = token.value;
                        form.appendChild(hiddenToken);
                    }

                    document.body.appendChild(form);
                    form.submit();
                }
            });

            const searchInput = document.getElementById('searchInput');
            const cards = document.querySelectorAll('.search-item');
            const noResults = document.getElementById('noResults');

            searchInput.addEventListener('input', function () {
                const searchTerm = this.value.toLowerCase().trim();
                let visibleCount = 0;

                cards.forEach(function (card) {
                    const content = [
                        card.getAttribute('data-contenido'),
                        card.getAttribute('data-proyecto'),
                        card.getAttribute('data-tarea'),
                        card.getAttribute('data-autor')
                    ].join(' ');

                    if (content.includes(searchTerm) || searchTerm === '') {
                        card.classList.remove('hidden-card');
                        visibleCount++;
                    } else {
                        card.classList.add('hidden-card');
                    }
                });

                if (visibleCount === 0 && searchTerm !== '') {
                    noResults.classList.remove('hidden-card');
                } else {
                    noResults.classList.add('hidden-card');
                }
            });
        });
    </script>
}