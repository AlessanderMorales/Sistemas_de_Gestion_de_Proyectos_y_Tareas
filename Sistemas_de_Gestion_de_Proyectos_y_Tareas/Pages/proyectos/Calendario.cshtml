@page
@model Sistema_de_Gestion_de_Proyectos_y_Tareas.Pages.Proyectos.CalendarioModel
@{
    ViewData["Title"] = "Calendario de Proyectos";
}

<!-- Aseguramos iconos -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --volcanic-bg: #1e1e2d;
        --volcanic-card: #2d2d3b;
        --accent-orange: #FF5722;
        --accent-red: #D32F2F;
        --accent-gold: #FFC107;
        --accent-blue: #2196F3;
        --accent-green: #4CAF50;
        --text-primary: #f5f5f7;
    }

    body {
        background-color: var(--volcanic-bg);
        color: var(--text-primary);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .title-volcanic {
        background: linear-gradient(to right, #FF512F, #F09819);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
        margin-bottom: 2rem;
        font-size: 2rem;
    }

    .filter-section {
        background-color: var(--volcanic-card);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        border: 1px solid rgba(255,255,255,0.05);
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .filter-title {
        color: var(--accent-orange);
        font-weight: 700;
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .timeline {
        position: relative;
        padding: 1rem 0;
    }

        /* Línea vertical */
        .timeline::before {
            content: '';
            position: absolute;
            top: 0;
            bottom: 0;
            left: 20px;
            width: 4px;
            background: #444;
            border-radius: 2px;
        }

    .timeline-item {
        position: relative;
        padding: 1.5rem;
        margin-bottom: 2rem;
        margin-left: 50px; /* Espacio para la línea */
        background-color: var(--volcanic-card);
        border-left: 5px solid var(--accent-orange);
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.2);
        transition: transform 0.3s ease;
    }

        .timeline-item::before {
            content: '';
            position: absolute;
            left: -39px; /* Ajustar círculo sobre la línea */
            top: 20px;
            width: 22px;
            height: 22px;
            background: var(--accent-orange);
            border: 4px solid var(--volcanic-bg);
            border-radius: 50%;
            z-index: 2;
        }

        .timeline-item:hover {
            transform: translateX(5px);
            border-left-color: var(--accent-gold);
        }

    .timeline-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .timeline-title {
        color: #fff;
        font-size: 1.4rem;
        font-weight: 700;
        margin: 0;
    }

    .timeline-dates {
        display: flex;
        gap: 1rem;
    }

    .date-box {
        text-align: center;
        padding: 0.4rem 0.8rem;
        background-color: rgba(255,255,255,0.05);
        border-radius: 6px;
        border: 1px solid rgba(255,255,255,0.1);
    }

    .date-label {
        font-size: 0.7rem;
        color: #888;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .date-value {
        font-size: 0.95rem;
        color: var(--accent-gold);
        font-weight: 600;
    }

    .timeline-description {
        color: #ccc;
        margin-bottom: 1.5rem;
        line-height: 1.5;
        font-size: 0.95rem;
    }

    /* Progress Bar */
    .timeline-progress {
        margin-top: 1rem;
    }

    .progress {
        height: 10px;
        background-color: #15151a;
        border-radius: 10px;
        overflow: hidden;
    }

    .progress-bar {
        background: linear-gradient(90deg, #FF512F, #DD2476); /* Gradiente volcánico */
        transition: width 0.6s ease;
    }

    .status-completado .progress-bar {
        background: linear-gradient(90deg, #11998e, #38ef7d);
    }
    /* Verde */
    .status-activo .progress-bar {
        background: linear-gradient(90deg, #F2994A, #F2C94C);
    }
    /* Naranja */

    .progress-info {
        display: flex;
        justify-content: space-between;
        margin-top: 0.5rem;
        font-size: 0.8rem;
        color: #888;
    }

    .status-badge {
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
    }

    .status-activo {
        background: rgba(255, 193, 7, 0.15);
        color: #FFC107;
        border: 1px solid #FFC107;
    }

    .status-completado {
        background: rgba(76, 175, 80, 0.15);
        color: #4CAF50;
        border: 1px solid #4CAF50;
    }

    .status-pendiente {
        background: rgba(158, 158, 158, 0.15);
        color: #bbb;
        border: 1px solid #777;
    }

    /* Botones */
    .timeline-actions {
        margin-top: 1.5rem;
        display: flex;
        gap: 10px;
    }

    .btn-timeline {
        padding: 6px 15px;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .btn-view {
        background: rgba(33, 150, 243, 0.1);
        color: #2196F3;
        border: 1px solid rgba(33, 150, 243, 0.3);
    }

        .btn-view:hover {
            background: #2196F3;
            color: white;
            transform: translateY(-2px);
        }

    .btn-edit {
        background: rgba(255, 193, 7, 0.1);
        color: #FFC107;
        border: 1px solid rgba(255, 193, 7, 0.3);
    }

        .btn-edit:hover {
            background: #FFC107;
            color: #000;
            transform: translateY(-2px);
        }

    .btn-volcanic-secondary {
        border: 1px solid #666;
        color: #ccc;
        padding: 8px 20px;
        border-radius: 50px;
        text-decoration: none;
    }

        .btn-volcanic-secondary:hover {
            border-color: #fff;
            color: #fff;
            background: rgba(255,255,255,0.05);
        }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #666;
    }

    .empty-state-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }
</style>

<h1 class="title-volcanic">@ViewData["Title"]</h1>

<div class="filter-section">
    <div class="filter-title"><i class="bi bi-calendar-range"></i> Cronología de Proyectos</div>
    <p style="color: #aaa; margin: 0; font-size: 0.9rem;">Visualiza el progreso y los plazos de todos los proyectos activos.</p>
</div>

@if (Model.Proyectos != null && Model.Proyectos.Any())
{
<div class="timeline">
    @foreach (var proyecto in Model.Proyectos)
        {
            var diasRestantes = 0;
            var progreso = 0;
            var estadoTexto = "Pendiente";
            var estadoClase = "status-pendiente";
            var itemClass = ""; // Para CSS específico si se desea

            if (proyecto.FechaInicio.HasValue && proyecto.FechaFin.HasValue)
            {
                var totalDias = (proyecto.FechaFin.Value - proyecto.FechaInicio.Value).Days;
                var diasTranscurridos = (DateTime.Now - proyecto.FechaInicio.Value).Days;
                diasRestantes = (proyecto.FechaFin.Value - DateTime.Now).Days;

                if (totalDias > 0)
                {
                    progreso = Math.Min(100, Math.Max(0, (int)((double)diasTranscurridos / totalDias * 100)));
                }

                if (DateTime.Now < proyecto.FechaInicio.Value)
                {
                    estadoTexto = "Pendiente";
                    estadoClase = "status-pendiente";
                }
                else if (DateTime.Now > proyecto.FechaFin.Value)
                {
                    estadoTexto = "Completado";
                    estadoClase = "status-completado";
                    progreso = 100;
                }
                else
                {
                    estadoTexto = "En Progreso";
                    estadoClase = "status-activo";
                }
            }

    <div class="timeline-item @estadoClase">
        <div class="timeline-header">
            <div>
                <h3 class="timeline-title">@proyecto.Nombre</h3>
                <div style="margin-top: 5px;">
                    <span class="status-badge @estadoClase">@estadoTexto</span>
                </div>
            </div>

            <div class="timeline-dates">
                @if (proyecto.FechaInicio.HasValue)
                        {
                <div class="date-box">
                    <div class="date-label">Inicio</div>
                    <div class="date-value">@proyecto.FechaInicio.Value.ToString("dd/MM/yyyy")</div>
                </div>
                        }
                @if (proyecto.FechaFin.HasValue)
                        {
                <div class="date-box">
                    <div class="date-label">Fin</div>
                    <div class="date-value">@proyecto.FechaFin.Value.ToString("dd/MM/yyyy")</div>
                </div>
                        }
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(proyecto.Descripcion))
                {
        <div class="timeline-description">
            @proyecto.Descripcion
        </div>
                }

        @if (proyecto.FechaInicio.HasValue && proyecto.FechaFin.HasValue)
                {
                    var totalDias = (proyecto.FechaFin.Value - proyecto.FechaInicio.Value).Days;

        <div class="timeline-progress">
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: @progreso%" aria-valuenow="@progreso" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <div class="progress-info">
                <span><i class="bi bi-hourglass-split"></i> Duración: @totalDias días</span>
                <span style="color: #fff; font-weight:bold;">@progreso%</span>
            </div>
            @if (diasRestantes > 0 && estadoTexto == "En Progreso")
                        {
            <div style="font-size: 0.8rem; color: var(--accent-orange); margin-top: 3px;">
                <i class="bi bi-clock-history"></i> Quedan @diasRestantes días
            </div>
                        }
        </div>
                }

        <div class="timeline-actions">
            <a class="btn-timeline btn-view" asp-page="./Mostrar" asp-route-id="@proyecto.IdProyecto">
                <i class="bi bi-eye"></i> Detalles
            </a>
            @if (User.IsInRole("JefeDeProyecto") || User.IsInRole("SuperAdmin"))
                    {
            <a class="btn-timeline btn-edit" asp-page="./Edit" asp-route-id="@proyecto.IdProyecto">
                <i class="bi bi-pencil"></i> Editar
            </a>
                    }
        </div>
    </div>
        }
</div>
}
else
{
<div class="empty-state">
    <div class="empty-state-icon"><i class="bi bi-calendar-x"></i></div>
    <h3>No hay proyectos registrados</h3>
    <p>Comienza creando tu primer proyecto</p>
    @if (User.IsInRole("JefeDeProyecto") || User.IsInRole("SuperAdmin"))
        {
    <a asp-page="Create" class="btn btn-volcanic-secondary mt-3">Crear Proyecto</a>
        }
</div>
}

<div class="mt-5">
    <a asp-page="./Index" class="btn-volcanic-secondary">
        <i class="bi bi-arrow-left"></i> Volver a la Lista
    </a>
</div>