@page "{id:int}"
@model Sistema_de_Gestion_de_Proyectos_y_Tareas.Pages.Proyectos.GestionarUsuariosModel
@{
    ViewData["Title"] = "Gestionar Usuarios del Proyecto";
}

<!-- Iconos -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --volcanic-bg: #1e1e2d;
        --volcanic-card: #2d2d3b;
        --accent-orange: #FF5722;
        --accent-red: #D32F2F;
        --accent-gold: #FFC107;
        --text-primary: #f5f5f7;
    }

    body {
        background-color: var(--volcanic-bg);
        color: var(--text-primary);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .title-volcanic {
        background: linear-gradient(to right, #FF512F, #F09819);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
        margin-bottom: 2rem;
    }

    .project-header {
        background-color: var(--volcanic-card);
        padding: 1.5rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        border-left: 5px solid var(--accent-orange);
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    .users-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .user-list-card {
        background-color: var(--volcanic-card);
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        border: 1px solid rgba(255,255,255,0.05);
    }

    .card-title {
        color: var(--text-primary);
        font-weight: 700;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 1px solid rgba(255,255,255,0.1);
        padding-bottom: 1rem;
    }

    .count-badge {
        background: linear-gradient(45deg, #FF512F, #DD2476);
        color: white;
        padding: 0.2rem 0.8rem;
        border-radius: 12px;
        font-size: 0.85rem;
        font-weight: 700;
    }

    .user-item {
        background-color: #1a1a20;
        padding: 1rem;
        margin-bottom: 0.75rem;
        border-radius: 8px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: all 0.2s ease;
        border: 1px solid rgba(255,255,255,0.05);
    }

        .user-item:hover {
            background-color: #222;
            border-color: var(--accent-orange);
            transform: translateX(5px);
        }

    .user-info h6 {
        margin: 0 0 0.25rem 0;
        font-size: 0.95rem;
        font-weight: 600;
        color: #fff;
    }

    .user-info small {
        color: #888;
        font-size: 0.85rem;
    }

    .role-badge {
        padding: 0.2rem 0.6rem;
        border-radius: 4px;
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        margin-left: 0.5rem;
    }

    .role-jefe {
        background: rgba(255, 87, 34, 0.15);
        color: #FF5722;
        border: 1px solid #FF5722;
    }

    .role-empleado {
        background: rgba(33, 150, 243, 0.15);
        color: #2196F3;
        border: 1px solid #2196F3;
    }

    .btn-action-sm {
        border: none;
        padding: 0.4rem 0.8rem;
        border-radius: 6px;
        font-size: 0.85rem;
        font-weight: 600;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        gap: 5px;
        cursor: pointer;
    }

    .btn-assign {
        background: rgba(76, 175, 80, 0.1);
        color: #4CAF50;
        border: 1px solid #4CAF50;
    }

        .btn-assign:hover {
            background: #4CAF50;
            color: #fff;
        }

    .btn-remove {
        background: rgba(244, 67, 54, 0.1);
        color: #f44336;
        border: 1px solid #f44336;
    }

        .btn-remove:hover {
            background: #f44336;
            color: #fff;
        }

    .empty-state {
        text-align: center;
        padding: 2rem;
        color: #666;
        font-style: italic;
    }

    .btn-volcanic-secondary {
        border: 1px solid #666;
        color: #ccc;
        padding: 10px 25px;
        border-radius: 50px;
        text-decoration: none;
        display: inline-block;
    }

        .btn-volcanic-secondary:hover {
            border-color: #fff;
            color: #fff;
            background: rgba(255,255,255,0.05);
        }

    @@media (max-width: 900px) {
        .users-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Modal */
    .modal-content {
        background-color: #2d2d3b;
        color: #fff;
        border: 1px solid #444;
    }

    .modal-header {
        border-bottom: 1px solid #444;
    }

    .modal-footer {
        border-top: 1px solid #444;
    }

    .btn-close-white {
        filter: invert(1);
    }
</style>

<h1 class="title-volcanic">@ViewData["Title"]</h1>

@if (Model.Proyecto != null)
{
<div class="project-header">
    <h3 style="color: #fff; margin-bottom: 0.5rem; font-weight:700;"><i class="bi bi-folder-fill text-warning"></i> @Model.Proyecto.Nombre</h3>
    <p style="color: #aaa; margin: 0;">@Model.Proyecto.Descripcion</p>
</div>

<div class="users-grid">
    <!-- Columna Asignados -->
    <div class="user-list-card">
        <h4 class="card-title">
            <span><i class="bi bi-person-check-fill text-success"></i> Usuarios Asignados</span>
            <span class="count-badge">@Model.UsuariosAsignados.Count</span>
        </h4>

        @if (Model.UsuariosAsignados.Any())
            {
        <div style="max-height: 400px; overflow-y: auto;">
            @foreach (var usuario in Model.UsuariosAsignados)
                    {
            <div class="user-item">
                <div class="user-info">
                    <h6>
                        @usuario.Nombres @usuario.PrimerApellido
                        <span class="role-badge @(usuario.Rol == "JefeDeProyecto" ? "role-jefe" : "role-empleado")">
                            @(usuario.Rol == "JefeDeProyecto" ? "Jefe" : "Empleado")
                        </span>
                    </h6>
                    <small>@usuario.Email</small>
                </div>
                <button type="button"
                        class="btn-action-sm btn-remove"
                        data-bs-toggle="modal"
                        data-bs-target="#confirmDesasignarModal"
                        data-usuario-id="@usuario.Id"
                        data-usuario-nombre="@usuario.Nombres @usuario.PrimerApellido"
                        data-proyecto-id="@Model.Proyecto.IdProyecto">
                    <i class="bi bi-x-lg"></i> Quitar
                </button>
            </div>
                    }
        </div>
            }
            else
            {
        <div class="empty-state">
            <i class="bi bi-people" style="font-size: 2rem; display:block; margin-bottom:10px;"></i>
            No hay usuarios asignados a este proyecto.
        </div>
            }
    </div>

    <!-- Columna Disponibles -->
    <div class="user-list-card">
        <h4 class="card-title">
            <span><i class="bi bi-person-plus-fill text-info"></i> Usuarios Disponibles</span>
            <span class="count-badge">@Model.UsuariosDisponibles.Count</span>
        </h4>

        @if (Model.UsuariosDisponibles.Any())
            {
        <div style="max-height: 400px; overflow-y: auto;">
            @foreach (var usuario in Model.UsuariosDisponibles)
                    {
            <div class="user-item">
                <div class="user-info">
                    <h6>
                        @usuario.Nombres @usuario.PrimerApellido
                        <span class="role-badge @(usuario.Rol == "JefeDeProyecto" ? "role-jefe" : "role-empleado")">
                            @(usuario.Rol == "JefeDeProyecto" ? "Jefe" : "Empleado")
                        </span>
                    </h6>
                    <small>@usuario.Email</small>
                </div>
                <form method="post" asp-page-handler="Asignar" style="margin: 0;">
                    <input type="hidden" name="idProyecto" value="@Model.Proyecto.IdProyecto" />
                    <input type="hidden" name="idUsuario" value="@usuario.Id" />
                    <button type="submit" class="btn-action-sm btn-assign">
                        <i class="bi bi-plus-lg"></i> Asignar
                    </button>
                </form>
            </div>
                    }
        </div>
            }
            else
            {
        <div class="empty-state">
            <i class="bi bi-check-circle" style="font-size: 2rem; display:block; margin-bottom:10px;"></i>
            Todos los usuarios disponibles ya están asignados.
        </div>
            }
    </div>
</div>

<div class="mt-4">
    <a asp-page="./Index" class="btn-volcanic-secondary">
        <i class="bi bi-arrow-left"></i> Volver a Proyectos
    </a>
</div>
}
else
{
<div class="alert alert-danger">
    <h4><i class="bi bi-exclamation-triangle"></i> Proyecto no encontrado</h4>
    <p>El proyecto que buscas no existe o fue eliminado.</p>
</div>
}

<!-- Modal -->
<div class="modal fade" id="confirmDesasignarModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="confirmModalLabel"><i class="bi bi-exclamation-triangle-fill"></i> Confirmar Desasignación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas desasignar a <strong id="usuarioNombre" class="text-white"></strong> del proyecto?</p>
                <div class="alert alert-warning" style="background-color: rgba(255, 193, 7, 0.1); border-color: #ffc107; color: #ffc107;">
                    <i class="bi bi-cone-striped"></i> <strong>Advertencia:</strong> Se eliminarán <strong>todas las tareas</strong> asignadas a este usuario dentro de este proyecto.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirmDesasignarBtn">Sí, Desasignar</button>
            </div>
        </div>
    </div>
</div>

<form id="desasignarForm" method="post" asp-page-handler="Desasignar" style="display: none;">
    <input type="hidden" id="desasignarProyectoId" name="idProyecto" value="" />
    <input type="hidden" id="desasignarUsuarioId" name="idUsuario" value="" />
</form>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var confirmModal = document.getElementById('confirmDesasignarModal');
            var confirmBtn = document.getElementById('confirmDesasignarBtn');
            var usuarioNombreEl = document.getElementById('usuarioNombre');
            var desasignarForm = document.getElementById('desasignarForm');
            var desasignarProyectoIdInput = document.getElementById('desasignarProyectoId');
            var desasignarUsuarioIdInput = document.getElementById('desasignarUsuarioId');

            confirmModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var usuarioId = button.getAttribute('data-usuario-id');
                var usuarioNombre = button.getAttribute('data-usuario-nombre');
                var proyectoId = button.getAttribute('data-proyecto-id');

                usuarioNombreEl.textContent = usuarioNombre;
                desasignarProyectoIdInput.value = proyectoId;
                desasignarUsuarioIdInput.value = usuarioId;
            });

            confirmBtn.addEventListener('click', function () {
                desasignarForm.submit();
            });
        });
    </script>
}